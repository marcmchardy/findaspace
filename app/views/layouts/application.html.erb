<body>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="brand" href="/">Findaspace</a>
            <div class="nav-collapse">
              <ul class="nav">
                <li class="active"><%= link_to 'Search', root_path %></li>
                <li class="active"><%= link_to 'How does it work?', pages_how_path %></li>
                <li class="active"><%= link_to 'Signup as a venue', pages_venue_path %></li>
                <li class="active"><%= link_to 'Signup as a finder', pages_user_path %></li>
                <li>
                <% if admin_signed_in? %>
                  <%= link_to 'Logout', destroy_admin_session_path, :method => 'delete' %>
                <% else %>
                  <%= link_to 'Login', new_admin_session_path %>
                <% end %>
                </li>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
<%= yield %>


</body>
</html>
